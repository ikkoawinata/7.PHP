//ini adalah fungsi void  yang berisi tipe data 
function coba(){
    $x = " Hello World\n";
    $y = 'F';
    $num =12;
    $float =12.67;
    $bool =True;
    $bool1 =false;
    $array = array(3,2,4,5);


// ini fungsi untuk mencetak atau print
    var_dump("ini adalah tipe data String = \n".$x);//memakai titik (.)

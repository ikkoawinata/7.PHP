<?php

function judul() {
    echo "=====================================================\n";
    echo "              SELAMAT DATANG DI PROGRAM              \n";
    echo "                MENGETAHUI TIPE DATA                 \n";
    echo "=====================================================\n";
}

function main() {
    judul();

    echo "1.) TIPE DATA INTEGER\n";
    $dataInteger = 0;
    echo "Data     : $dataInteger\n";
    echo "Bertipe  : " . gettype($dataInteger) . "\n\n";

    echo "2.) TIPE DATA FLOAT\n";
    $dataFloat = 6.08;
    echo "Data     : $dataFloat\n";
    echo "Bertipe  : " . gettype($dataFloat) . "\n\n";

    echo "3.) TIPE DATA STRING\n";
    $dataString = "Ikko Cahya Awinata";
    echo "Data     : $dataString\n";
    echo "Bertipe  : " . gettype($dataString) . "\n\n";

    echo "4.) TIPE DATA BOOLEAN\n";
    $dataBool = true;
    echo "Data     : $dataBool\n";
    echo "Bertipe  : " . gettype($dataBool) . "\n\n";

    echo "5.) TIPE DATA CHAR\n";
    $dataChar = 'F';
    echo "Data     : $dataChar\n";
    echo "Bertipe  : " . gettype($dataChar) . "\n\n";

    echo "6.) TIPE DATA ARRAY\n";
    $dataArray = array(1, 2, 3, 4, 5);
    echo "Data     : " . implode(", ", $dataArray) . "\n";
    echo "Bertipe  : " . gettype($dataArray) . "\n\n";
}

main();

?>

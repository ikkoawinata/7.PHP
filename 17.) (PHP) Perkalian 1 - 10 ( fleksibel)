<?php

function welcome(){
    echo "\n=================================================";
    echo "\n        SELAMAT DATANG DI PROGRAM";
    echo "\n            PERKLALIAN 1-10";
    echo "\n               BAHASA PHP";
    echo "\n=================================================";
}

function main(){

$i = 0; $j = 0; $row = 0;

for ($i = 1; $i<=10 ; $i++){
    $row = "\n";
    for ($j = 1; $j <= 10; $j++){
        // ternyata pada variabel row itu ( . ) titik lalu sama dengan ( = )
        $row .= $i * $j . " | ";
    }
    echo "\n ".$row;
}
}


 welcome();
 main();

?>
